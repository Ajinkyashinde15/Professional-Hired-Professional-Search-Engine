<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#7D1935">

    <ImageView
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logos" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="  What are u looking for? "
        android:id="@+id/textView9"
        android:textSize="35dp"
        android:paddingTop="23dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView10"
        android:layout_weight="0.06" />

    <CheckBox
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:text="1. Make up artist"
        android:id="@+id/makeup_ckbox"
        android:checked="true"
        android:textSize="28dp"
        android:paddingLeft="21dp"
        android:background="#4A96AD"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView11"
        android:layout_weight="0.06" />

    <CheckBox
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:text="2. Programmer"
        android:id="@+id/programmer_ckbox"
        android:checked="false"
        android:textSize="28dp"
        android:paddingLeft="21dp"
        android:background="#4A96AD"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView12"
        android:layout_weight="0.06" />

    <CheckBox
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:text="3. Plumber"
        android:id="@+id/checkBox"
        android:checked="false"
        android:textSize="28dp"
        android:paddingLeft="21dp"
        android:background="#4A96AD"
        android:textColor="#ffffff" />
</LinearLayout>